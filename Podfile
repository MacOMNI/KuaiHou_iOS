target 'KuaiHou_iOS' do

  # 网络图片加载库
  pod 'SDWebImage'
  # 提示框组件
  pod 'SVProgressHUD'
  # 刷新组件
  pod 'MJRefresh'
  # model组件
  pod 'JSONModel'
  # 富文本组件
  pod 'YYText'
  # 约束布局组件
  pod 'Masonry'
  # 键盘组件
  pod 'IQKeyboardManager'
  # 崩溃拦截组件
  pod 'AvoidCrash'
  # 图片相册组件
  pod 'TZImagePickerController'
  # 网络请求组件
  pod 'AFNetworking'
  # 空数据占位
  pod 'DZNEmptyDataSet'
  # 骨骼过度动画
  pod 'TABAnimated'
  # 分段选择器
  pod 'WMPageController'
  # 富文本labbel
  pod 'MLLabel'
  # 百度地图SDK
  pod 'BaiduMapKit'
  # 播放器
  pod 'KSYMediaPlayer_iOS', :git => 'https://github.com/ksvc/KSYMediaPlayer_iOS.git'

  use_frameworks!

end
